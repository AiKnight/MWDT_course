/* pages/galleryindex/galleryindex.wxss */
.index_bar {
  width: 750rpx;
  padding: 0 0rpx;
  text-align: center;
}

.pic_bar {
  width: 95%;
  height: 150rpx;
  margin: 10px auto;
}

.pic {
  display: inline-block;
  width: 20%;
  height: 100%;
  margin-right: 5px;
}

.pic>image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.pic_info {
  display: inline-block;
  width: auto;
  width: 65%;
  height: 100%;
  text-align: left;
}

.pic_title {
  display: block;
  width: 100%;
  height: 30%;

}

.pic_remarks {
  display: block;
  width: 100%;
  height: 60%;
  margin-top: 5%;

  overflow: hidden;
  /* white-space:nowrap; */
  /* text-overflow: ellipsis; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.collect_bt {
  display: inline-block;
  width: 10%;
  height: 100%;
  line-height: 100%;
  text-align: center;
  font-size: 10px;
  border-left: solid 1px #ebebeb;
}

.bt {
  display: block;
  width: 20px;
  height: 20px;
  margin: 30px 0 0 15px;
  border-radius: 5px;
  box-shadow: 0 0 2px 1px #c9c9c9;
  transition: all .5s;
}

.bt_cl {
  background-color: #4385ff;
  box-shadow: 0 0 2px 1px #999999;
}