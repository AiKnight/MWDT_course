/* pages/gallerycollect/gallerycollect.wxss */
.index_bar {
  width: 750rpx;
  padding: 0 0rpx;
  text-align: center;
}

.pic_bar {
  width: 95%;
  height: 150rpx;
  margin: 10px auto;
}

.pic {
  display: inline-block;
  width: 20%;
  height: 100%;
  margin-right: 5px;
}

.pic>image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.pic_info {
  display: inline-block;
  width: auto;
  width: 75%;
  height: 100%;
  text-align: left;
}

.pic_title {
  display: block;
  width: 100%;
  height: 30%;
  color: #131313;
  font-size: 16px;
  font-weight: 900;
}

.pic_remarks {
  display: block;
  width: 100%;
  height: 65%;
  margin-top: 2%;
  font-size: 12px;
  color: #666666;
  overflow: hidden;
  /* white-space:nowrap; */
  /* text-overflow: ellipsis; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

/* 没有图片时的提示信息 */
.message{
  display: flex;
  width: 750rpx;
  height: 80vh;
  color: #666666;
  font-size: 14px;
  justify-content: center;
  align-items: center;
}


